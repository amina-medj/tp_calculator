<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout tools:context=".MainActivity"
    android:weightSum="9"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="0dp"
        android:layout_width="match_parent"
        android:textSize="50sp"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:padding="10dp"
        android:maxLength="15"
        android:hint="0"
        android:gravity="center|end"
        android:background="#ffffff"
        android:layout_weight="2"
        android:id="@+id/input"/>

    <TextView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:maxLength="10"
        android:gravity="center|end"
        android:background="#ffffff"
        android:layout_weight="1"
        android:id="@+id/sign"/>


    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:background="#210c60"
        android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="log"
            android:onClick="btn_log"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="ln"
            android:onClick="btn_ln"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="xⁿ"
            android:onClick="btn_pow"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:text="√"
            android:onClick="btn_racine"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:text="!"
            android:onClick="btn_fact"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>


    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#210c60"
        android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="sin"
            android:onClick="btn_sin"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="cos"
            android:onClick="btn_cos"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="tan"
            android:onClick="btn_tan"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>


    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_weight="1"
            android:id="@+id/btn_7"
            android:text="7"
            android:onClick="btn_7"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_weight="1"
            android:id="@+id/btn_8"
            android:text="8"
            android:onClick="btn_8"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_weight="1"
            android:id="@+id/btn_9"
            android:text="9"
            android:onClick="btn_9"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#210c60"
            android:layout_weight="1"
            android:id="@+id/btn_add"
            android:text="+"
            android:onClick="btn_add"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#210c60"
            android:layout_weight="1"
            android:id="@+id/btn_dlt"
            android:text="CE"
            android:onClick="btn_dlt"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>


    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_weight="1"
            android:id="@+id/btn_4"
            android:text="4"
            android:onClick="btn_4"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_weight="1"
            android:id="@+id/btn_5"
            android:text="5"
            android:onClick="btn_5"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:layout_weight="1"
            android:id="@+id/btn_6"
            android:text="6"
            android:onClick="btn_6"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="#210c60"
            android:layout_weight="1"
            android:id="@+id/btn_sub"
            android:text="-"
            android:onClick="btn_sub"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:background="#210c60"
            android:layout_weight="1"
            android:id="@+id/btn_clear"
            android:text="C"
            android:onClick="btn_clear"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>


    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="2">


        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="4">


            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:id="@+id/btn_1"
                    android:text="1"
                    android:onClick="btn_1"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:id="@+id/btn_2"
                    android:text="2"
                    android:onClick="btn_2"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:id="@+id/btn_3"
                    android:text="3"
                    android:onClick="btn_3"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="#210c60"
                    android:layout_weight="1"
                    android:id="@+id/btn_mult"
                    android:text="×"
                    android:onClick="btn_mult"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

            </LinearLayout>


            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1">

                <View
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:id="@+id/view"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:id="@+id/btn_0"
                    android:text="0"
                    android:onClick="btn_0"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:layout_weight="1"
                    android:id="@+id/btn_point"
                    android:text="."
                    android:onClick="btn_point"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:background="#210c60"
                    android:layout_weight="1"
                    android:id="@+id/btn_div"
                    android:text="÷"
                    android:onClick="btn_div"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1">

            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"

                android:textSize="30sp"
                android:textColor="#ffffff"
                android:background="#210c60"
                android:layout_weight="1"
                android:id="@+id/btn_equal"
                android:text="="
                android:onClick="btn_equal"
                style="@style/Widget.AppCompat.Button.Borderless"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>